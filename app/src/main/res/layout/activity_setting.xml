<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a10483.weilog.setting">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <android.support.v7.widget.Toolbar
            android:id="@+id/setting_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
            <ImageView
                android:id="@+id/back_from_setting"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="match_parent"
                android:src="@drawable/ic_back"/>
            <TextView
                android:layout_marginStart="45dp"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:text="设置"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:gravity="center|start"/>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/backgrey"/>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/user_manage"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="账户管理"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center|start"/>
                <TextView
                    android:id="@+id/user_name_in_setting"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Leothon"
                    android:textColor="@color/gray"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/backgrey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="385dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/autoplayvideosetting"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:text="在WIFI下自动播放视频"
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:gravity="center|start"/>
                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/auto_setting"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:typeface="normal"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/backgrey"/>
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/vioce_settings"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:text="声音"
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:gravity="center|start"/>
                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/vioce_setting"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:typeface="normal"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/backgrey"/>
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/notice_settings"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:text="通知"
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:gravity="center|start"/>
                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/notice_setting"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:typeface="normal"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/backgrey"/>
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/view_setting"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:text="显示设置"
                        android:textColor="@color/black"
                        android:textSize="22sp" />
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/backgrey"/>
                <LinearLayout
                    android:id="@+id/language"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="语言"
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:gravity="center|start"/>
                    <TextView
                        android:id="@+id/language_show"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/gray"
                        android:textSize="20sp"
                        android:text="跟随系统"
                        android:gravity="center"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/backgrey"/>
                <LinearLayout
                    android:id="@+id/explore_settings"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="浏览器"
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:gravity="center|start"/>
                    <TextView
                        android:id="@+id/explore_setting"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/gray"
                        android:textSize="20sp"
                        android:text="内置浏览器"
                        android:gravity="center"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/backgrey"/>
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/somethings"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="隐私设置"
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:gravity="center|start"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/backgrey"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/backgrey"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/aboutapp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:text="关于"
                android:gravity="center|start"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/backgrey"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/login_out"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="登出"
                android:textSize="22sp"
                android:textColor="@color/red"
                android:gravity="center|start"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/backgrey">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Weilog&#160;By&#8201;Leothon"
                    android:textSize="20sp"
                    android:textColor="@color/gray"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
